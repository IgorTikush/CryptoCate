extends layout

block content
    
    h1 #{category.name}
    h2 #{category.description}
    if category.image 
        img(src=category.image)
    //- h4 Coins
    //- dt
    main
        -each coin in coins
            a(href=coin.url)
                .card
                    if coin.image 
                        img(src=coin.image)

                    p #{coin.name}
                    .description #{coin.description}
            
        .card
            a(href='/catalog/coin/create')
                include ../public/images/plus.svg
    .buttons
        a(href=category.url + '/update')
            button Update
        a(href=category.url + '/delete')
            button Delete
        a(href='/')
            button Back
